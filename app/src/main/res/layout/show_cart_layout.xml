<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bgcolor_left"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    tools:context=".Cart.ShowCart"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/show111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "@drawable/round_border_item"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Tổng:"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/totalFinal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="15000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorRed"
            android:layout_alignParentEnd="true" />

        

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/show111"
        android:layout_above="@+id/btnCart_ShowNext"
        />

    <Button
        android:id="@+id/btnCart_ShowNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="tiếp tục"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/round_border"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
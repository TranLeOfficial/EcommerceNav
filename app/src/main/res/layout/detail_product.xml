<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor_left">
    <!--hdahd-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bgcolor_right"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Chi Tiết Sản Phẩm"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bgcolor_right"
        android:src="@drawable/banner_ao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDetail"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgcolor_left"
        android:orientation="vertical">




            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/discountPriceD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittest"
                        android:padding="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:text="10% OFF"
                        android:textColor="#3C8E03"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/productNameD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Ten San Pham"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPriceD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Gia san pham"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/productDescriptionD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Mo ta san pham"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/productCategoryD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Danh muc san pham"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/productQuantityD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Danh muc san pham"
                        android:textColor="#000" />
                </LinearLayout>
            </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button

                android:id="@+id/btnRantingD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_border_rating"
                android:text="Xem Đánh Giá"
                android:textColor="@color/colorRed"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddcartD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/round_border_cart"
                android:drawableStart="@drawable/add_to_cart"
                android:text="Thêm Vào Giỏ Hàng"
                android:textColor="#0998ED"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>